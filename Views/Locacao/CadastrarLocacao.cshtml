@model List<ProjetoFinalMvc.Models.LocacaoViewModel>

@{
    ViewBag.Title = "Lista de Locações";
}

<h2>Lista de Locações</h2>

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger">
        @TempData["MensagemErro"]
    </div>
}

@if (Model != null && Model.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>Nome</th>
                <th>Usuário</th>
                <th>Data Início</th>
                <th>Data Fim</th>
                <th>Situação</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>@(i + 1)</td>
                    <td>@Model[i].Nome</td>
                    <td>@Model[i].IdUsuario</td>
                    <td>@Model[i].DtInicio.ToString("dd/MM/yyyy")</td>
                    <td>@Model[i].DtFim.ToString("dd/MM/yyyy")</td>
                    <td>@Model[i].DtSituacao.ToString("dd/MM/yyyy")</td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = Model[i].Id }, new { @class = "btn btn-warning btn-sm" })
                        @Html.ActionLink("Detalhes", "Details", new { id = Model[i].Id }, new { @class = "btn btn-info btn-sm" })
                        @Html.ActionLink("Excluir", "Delete", new { id = Model[i].Id }, new { @class = "btn btn-danger btn-sm" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">Nenhuma locação encontrada.</div>
}